
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- layout page for vaccination home -->
<div class="container">
    <div class="row">
        <!-- Left panel-->
        <div class="col-md-3 pt-4 position-relative">
            <!-- section header -->
            <div class="left-header">
                <h4>Menu</h4>
                <hr />
            </div>
            <!-- navigation lists -->
            <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action @(ViewBag.CurrentMenu == "vaccination-home" ? "active" : "" )"
                   href="@Url.RouteUrl("vaccination.home")"
                   aria-controls="Overview">
                    Overview
                </a>
                <a class="list-group-item list-group-item-action @(ViewBag.CurrentMenu == "vaccination-create" ? "active" : "" )"
                   href="@Url.RouteUrl("vaccination.create")"
                   aria-controls="Add new">
                    Add new
                </a>
            </div>

        </div>

        <!-- Right panel -->
        <div class="col-md-9 pt-4">
            <!-- section header -->
            <div class="right-header">
                <h3>@ViewBag.Heading</h3>
                <hr />
            </div>
            <!-- section main content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>
</div>


<!-- section for js -->
@section Scripts{
    @RenderSection("VaccinationScripts", false)
}

